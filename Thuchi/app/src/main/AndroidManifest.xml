<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.nghiatrinh.thuchi" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activitys.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="income_expense.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.android.nghiatrinh.thuchi.model" />

        <activity
            android:name=".activitys.AddNewCategoryActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_add_new_income_category"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activitys.AddNewIncomeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_add_new_income"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activitys.AddNewExpenseActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_add_new_income"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activitys.ListCategoryActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_list_category"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activitys.EditCategoryActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_edit_new_income_category"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activitys.EditIncomeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activitys.EditExpenseActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".activitys.DetailIncomeExpenseActivity" >
        </activity>
        <activity android:name=".activitys.SettingsActivity" >
        </activity>
        <activity
            android:name=".activitys.Sync"
            android:label="@string/title_activity_sync" >
        </activity>
        <activity android:name=".activitys.DeviceListActivity" >
        </activity>
        <activity
            android:name=".activitys.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.WebSyncActivity">
        </activity>
    </application>

</manifest>
